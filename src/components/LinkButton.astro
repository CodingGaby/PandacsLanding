---
import Right from "../icons/Right.astro"
interface Props {
  direction: string
  text: string
  title: string
}

const { text, direction, title } = Astro.props
---
<a href={direction} title={title}
	class="group relative overflow-hidden bg-[#688c44] focus:ring-4 focus:ring-[#47602f] inline-flex items-center px-7 py-2.5 text-white justify-center hover:transform hover:scale-105 duration-300">
	<span class="z-40">{text}</span>
	<Right/>
	<div
		class="absolute inset-0 h-[200%] w-[200%] rotate-45 translate-x-[-70%] transition-all group-hover:scale-100 bg-white/30 group-hover:translate-x-[50%] z-20 duration-1000">
	</div>
</a>